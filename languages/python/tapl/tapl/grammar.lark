?start: expression_

?expression_: if_expr | BOOLEAN
?expression: LEFTRB expression_ RIGHTRB | expression_

if_expr: IF BOOLEAN THEN expression ELSE expression
BOOLEAN: "true" | "false"

IF: "if"
THEN: "then"
ELSE: "else"
LEFTRB: "("
RIGHTRB: ")"

%ignore /\s+/  // Ignores all whitespace characters (spaces, tabs, newlines)
